{
  "name": "openpkg",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "apps/platform/*"
  ],
  "scripts": {
    "build": "bun run build:doccov-spec && bun run build:sdk && bun run build:cli",
    "build:doccov-spec": "cd packages/doccov-spec && bun run build",
    "build:sdk": "cd packages/sdk && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "build:site": "cd apps/site && bun run build",
    "build:platform": "cd apps/platform && for dir in */; do (cd \"$dir\" && bun run build 2>/dev/null || true); done",
    "dev": "bun run --parallel dev:doccov-spec dev:sdk dev:cli",
    "dev:doccov-spec": "cd packages/doccov-spec && bun run dev",
    "dev:sdk": "cd packages/sdk && bun run dev",
    "dev:cli": "cd packages/cli && bun run dev",
    "dev:site": "cd apps/site && bun run dev",
    "lint": "bunx biome check packages/ apps/",
    "lint:fix": "bunx biome check --write packages/ apps/",
    "format": "bunx biome format --write packages/ apps/",
    "changeset": "changeset",
    "version": "changeset version && bun install",
    "release": "NPM_TOKEN=$NPM_DOCCOV_TOKEN changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "@openpkg-ts/sdk": "file:../openpkg-ts/packages/sdk",
    "vercel": "^48.10.12"
  }
}
