{
  "name": "@driftdev/cli",
  "version": "1.0.0",
  "description": "Drift CLI - Documentation coverage and drift detection for TypeScript",
  "keywords": [
    "typescript",
    "cli",
    "documentation",
    "drift",
    "docs-coverage",
    "drift-detection"
  ],
  "homepage": "https://github.com/ryanwaits/drift#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanwaits/drift.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": "Ryan Waits",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "drift": "./dist/drift.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "cli": "bun run src/drift.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "for f in test/*.test.ts; do bun test \"$f\" || exit 1; done"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@driftdev/sdk": "^1.0.0",
    "@openpkg-ts/sdk": "^0.37.0",
    "@openpkg-ts/spec": "^0.37.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "bunup": "latest"
  },
  "publishConfig": {
    "access": "public"
  }
}
