{
  "name": "@driftdev/sdk",
  "version": "1.0.0",
  "description": "Drift SDK - Documentation coverage and drift detection for TypeScript",
  "keywords": [
    "typescript",
    "documentation",
    "sdk",
    "drift",
    "docs-coverage",
    "drift-detection"
  ],
  "homepage": "https://github.com/ryanwaits/drift#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanwaits/drift.git",
    "directory": "packages/sdk"
  },
  "license": "MIT",
  "author": "Ryan Waits",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./analysis": {
      "import": "./dist/analysis/index.js",
      "types": "./dist/analysis/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./markdown": {
      "import": "./dist/markdown/index.js",
      "types": "./dist/markdown/index.d.ts"
    },
    "./examples": {
      "import": "./dist/examples/index.js",
      "types": "./dist/examples/index.d.ts"
    },
    "./history": {
      "import": "./dist/history/index.js",
      "types": "./dist/history/index.d.ts"
    },
    "./cache": {
      "import": "./dist/cache/index.js",
      "types": "./dist/cache/index.d.ts"
    }
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "@openpkg-ts/sdk": "^0.37.0",
    "@openpkg-ts/spec": "^0.37.0",
    "@vercel/sandbox": "^1.0.3",
    "mdast": "^3.0.0",
    "remark-mdx": "^3.1.0",
    "remark-parse": "^11.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@sinclair/typebox": "^0.34.41",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "arktype": "^2.1.29",
    "bunup": "latest",
    "valibot": "^1.2.0",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  }
}
